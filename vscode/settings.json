{
    "workbench.settings.editor": "json",
  
    "editor.fontFamily": "'Hack'",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.lineHeight": 22,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "relative",
    "editor.rulers": [80],
    "editor.tabCompletion": "on",
    "editor.snippetSuggestions": "top",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },

    "[javascript]": {
      "editor.formatOnSave": true
    },
    "[typescript]": {
      "editor.formatOnSave": true
    },
    "[vue]": {
      "editor.formatOnSave": true
    },
  
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
  
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "'Hack'",
  
    "window.zoomLevel": 0,
    "workbench.activityBar.visible": false,
    "workbench.editor.tabSizing": "shrink",
  
    // NORMALIZE COMMENT FONT
    "editor.tokenColorCustomizations": {
      "textMateRules": [
        {
          "scope": ["comment"],
          "settings": {
            "fontStyle": ""
          }
        },
        {
          "scope": ["meta.object-literal.key.js"],
          "settings": {
            "foreground": "#83a598"
          }
        }
      ]
    },
  
    // VIM SETTINGS
    "vim.useSystemClipboard": true,
    "vim.incsearch": true,
    "vim.hlsearch": false,
    "vim.handleKeys": {
      "C-s": false,
      "C-b": false
    },
    "vim.insertModeKeyBindings": [
      {
        "before": ["j", "j"],
        "after": ["<Esc>"]
      }
    ],
    "vim.normalModeKeyBindings": [
      {
        "before": ["<space>"],
        "after": ["<leader>", "<leader>", "s"]
      }
    ],
  
    // Vim Easymotion
    "vim.easymotion": true,
    "vim.easymotionMarkerFontFamily": "Hack",
    "vim.easymotionMarkerFontSize": "13",
    "vim.easymotionMarkerFontWeight": "700",
    "vim.easymotionMarkerHeight": 22,
    "vim.easymotionMarkerWidthPerChar": 8,
    "vim.easymotionMarkerYOffset": 0,
    "vim.easymotionMarkerBackgroundColor": "#282828",
    "vim.easymotionMarkerForegroundColorOneChar": "#FF0000",
    "vim.easymotionMarkerForegroundColorTwoChar": "#FF00B6",
    "workbench.startupEditor": "newUntitledFile",
  
    "vetur.format.defaultFormatter.html": "prettier",
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "json.format.enable": false,
  }
