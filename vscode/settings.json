{
	"editor.fontFamily": "'Fira Code'",
	"editor.fontLigatures": true,
	"editor.fontSize": 11,
	"editor.lineHeight": 24,
	"editor.tabSize": 2,
	"editor.insertSpaces": false,
	"editor.detectIndentation": true,
	"editor.minimap.enabled": false,
	"editor.lineNumbers": "relative",
	"editor.rulers": [100],

	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,

	"terminal.integrated.fontSize": 11,
	"terminal.integrated.fontFamily": "'Fira Code'",

	"window.zoomLevel": 1,

	"workbench.colorTheme": "Gruvbox Dark (Medium)",
	"workbench.activityBar.visible": false,
	"workbench.editor.tabSizing": "shrink",

	// NORMALIZE COMMENT FONT
	"editor.tokenColorCustomizations": {
			"textMateRules": [
					{ 
							"scope": [
									"comment",
							],
							"settings": {
									"fontStyle": "",
							}
					}
			]
	},

	// VIM SETTINGS
	"vim.useSystemClipboard": true,
	"vim.incsearch": true,
	"vim.hlsearch": false,
	"vim.handleKeys": {
		"C-s": false,
		"C-b": false
	},
	"vim.insertModeKeyBindings": [
		{
			"before": [
				"j",
				"j"
			],
			"after": [
				"<Esc>"
			]
		}
	],
	"vim.normalModeKeyBindings": [
		{
			"before": [
				"<space>"
			],
			"after": [
				"<leader>",
				"<leader>",
				"s"
			]
		}
	],

	// Vim Easymotion
	"vim.easymotion": true,
	"vim.easymotionMarkerFontFamily": "Fira Code",
	"vim.easymotionMarkerFontSize": 11,
	"vim.easymotionMarkerFontWeight": 700,
	"vim.easymotionMarkerHeight": 24,
	"vim.easymotionMarkerWidthPerChar": 8,
	"vim.easymotionMarkerYOffset": 0,
	"vim.easymotionMarkerBackgroundColor": "#282828",
	"vim.easymotionMarkerForegroundColorOneChar": "#FF0000",
	"vim.easymotionMarkerForegroundColorTwoChar": "#FF00B6",
	"workbench.startupEditor": "newUntitledFile",

	"eslint.autoFixOnSave": true,
	"vetur.format.defaultFormatter.html": "prettier"
}
